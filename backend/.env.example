# Top3-Hunter Backend Environment Configuration

# 基础配置
APP_NAME=Top3-Hunter
VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-here-change-in-production

# 数据库配置
# SQLite (开发环境)
DATABASE_URL=sqlite:///./top3_hunter.db

# PostgreSQL (生产环境)
# DATABASE_URL=postgresql://username:password@localhost:5432/top3_hunter

DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# API密钥配置
SERPER_API_KEY=your-serper-api-key-here
LLM_API_KEY=your-claude-or-openai-api-key-here
LLM_PROVIDER=anthropic
LLM_MODEL_NAME=claude-3-haiku-20240307

# 缓存配置
CACHE_TTL_QUERY=21600
CACHE_TTL_CONFIG=60
CACHE_PREFIX=top3_hunter

# 管理员配置
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# 外部API配置
SEARCH_TIMEOUT=30
LLM_TIMEOUT=60
MAX_RETRIES=3

# 日志配置
LOG_LEVEL=INFO

# 安全配置
RATE_LIMIT_PER_MINUTE=30